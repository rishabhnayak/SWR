<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ml.rishabhnayak.swr">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ForceUpdate.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launch"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launch_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegistrationActivity"
            android:label="@string/title_activity_registration"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".LauncherActivity"
            android:label="@string/title_activity_launcher"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_launcher"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".EnquiryActivity"
            android:label="@string/title_activity_launcher"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"></activity>
        <activity android:name=".GalleryActivity"></activity>
        <activity android:name=".PaymentActivity"
            android:screenOrientation="portrait">
        </activity>
    <meta-data android:name="instamojo.orderauth.url"
                   android:value="http://raysitworld.com/access_token.php"
            />
    </application>
    <uses-permission-sdk-23 android:name="android.permission.RECEIVE_SMS"/>
 
    <uses-permission-sdk-23 android:name="android.permission.READ_SMS"/>
 
    <uses-permission-sdk-23 android:name="android.permission.READ_PHONE_STATE"/>
 
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
 
    <uses-permission android:name="android.permission.READ_SMS"/>
 
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
 
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
 

</manifest>